[colors]
background=#191919
background-1=#262626

foreground=#ffffff
foreground-alt = #555

primary = #cf2472
secondary = #2369c1
tertiary = #333

primary-text = #fff
secondary-text = #aaaaaa

green = #2369c1
orange = #79479a
red = #cf2472

#green = #aaff77
#orange = #fba922
#red = #ff5555


[bar/base]
font-0 = "SF Mono:size=9;3"
font-1 = "Font Awesome 5 Free Regular:size=9;3"
font-2 = "Font Awesome 5 Free Solid:size=9;3"
font-3 = "MaterialIcons Regular:size=9;3"
font-4 = "Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=9;3"
background = ${colors.background}
foreground = ${colors.foreground}
line-color = ${colors.foreground}

# Research setting
enable-ipc = true

height = 25
padding = 2

border-size = 1 
border-color = #111

offset-y = 7

module-margin = 2

# Draw above wm defined space
wm-restack = bspwm
override-redirect = true


[bar/power]
inherit = bar/base
monitor = ${env:MONITOR:HDMI-A-3}
width = 10%

offset-x = 0.5%

line-size = 16

modules-center = powermenu 

[bar/music]
inherit = bar/base
enable-ipc = true
width = 25%

offset-x = 37.5%

modules-left = previous playpause next
modules-center = spotify

[bar/tray]
inherit = bar/base
width = 28%

offset-x = 71.5%
padding = 5

modules-center = wired-network pulseaudio date

tray-position = right
tray-padding = 5

[bar/ws]
inherit = bar/base
monitor = ${env:MONITOR:HDMI-A-3}
bottom = true
width = 12%

line-size = 2

modules-center = bspwm
offset-x = 0.5%

[bar/stats]
inherit = bar/base
monitor = ${env:MONITOR:HDMI-A-3}
bottom = true
width = 30%

modules-center = temperature cpu memory
offset-x = 69.5%


[bar/external]
inherit = bar/base
monitor = ${env:MONITOR:HDMI-A-3}
bottom = true
fixed-center = true
width = 25%

offset-x = 37.5%
line-size = 2

modules-center = bspwm

